{{ define "mailing" }}
    <section id="newsletter">
      <div class="bg-white py-16 sm:py-24">
        <div class="mx-auto max-w-7xl sm:px-6 lg:px-8">
          <div class="relative isolate overflow-hidden bg-teal-800 px-6 shadow-2xl sm:rounded-3xl sm:px-24 pt-24 pb-12 xl:pt-32 xl:pb-24 ">
            <h2 class="mx-auto max-w-3xl text-center text-4xl font-semibold tracking-tight text-white sm:text-5xl">Don't miss a single âœ¨ moment</h2>
      <p class="mx-auto mt-6 max-w-lg text-center text-lg text-gray-300">Join our mailing list and don't miss a moment of what's happening at the frontier of bitcoin.</p>
      <div id="news_subscribe_result" class="mt-4 mx-auto max-w-md text-sm text-gray-300"></div>
      <form class="mx-auto mt-4 flex max-w-md gap-x-4">
        <label for="newsletter-email" class="sr-only">Email address</label>
        <input id="newsletter-email" 
	type="email" 
	name="newsletter-email" 
	required 
	placeholder="Enter your email" 
	autoComplete="on" 
	autoCorrect="off" 
	autoCapitalize="off" 
	spellCheck="false"
	autocomplete="email" 
	class="min-w-0 flex-auto rounded-md bg-white/4 px-3.5 py-2 text-base text-gray-800 outline-1 -outline-offset-1 outline-white/10 placeholder:text-gray-400 focus:outline-2 focus:-outline-offset-2 focus:outline-white sm:text-sm/6" />
        <button type="submit" 
	 hx-post="/newsletter/subscribe"
	 hx-include="#newsletter-email"
	 hx-trigger="click"
	 hx-target="#news_subscribe_result"
	 hx-on::before-request="document.querySelector('#newsletter-email').value='';document.querySelector('#em-post-result').remove()"
	class="flex-none rounded-md bg-white px-3.5 py-2.5 text-sm font-semibold text-gray-900 shadow-xs hover:bg-gray-100 focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-white">Join list</button>
      </form>
      <div class="mx-auto mt-2 max-w-md text-sm text-gray-300">By subscribing you agree to receive updates from bitcoin++. No spam, just the good stuff.</div>
      <svg viewBox="0 0 1024 1024" aria-hidden="true" class="absolute top-1/2 left-1/2 -z-10 size-256 -translate-x-1/2">
        <circle r="512" cx="512" cy="512" fill="url(#759c1415-0410-454c-8f7c-9a820de03641)" fill-opacity="0.7" />
        <defs>
          <radialGradient id="759c1415-0410-454c-8f7c-9a820de03641" r="1" cx="0" cy="0" gradientUnits="userSpaceOnUse" gradientTransform="translate(512 512) rotate(90) scale(512)">
            <stop stop-color="oklch(95.4% 0.038 75.164)" />
            <stop offset="1" stop-color="oklch(60% 0.118 184.704)" stop-opacity="0" />
          </radialGradient>
            </defs>
          </svg>
        </div>
      </div>
    </div>
    </section>
{{ end }}
