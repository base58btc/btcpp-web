{{ define "form_list" }}
<div class="flex my-4 sm:col-span-2">
  <div class="flex h-6 items-center mr-4">
    <div class="group relative inline-flex w-8 shrink-0 rounded-full bg-gray-200 p-px outline-offset-2 outline-bitcoin ring-1 ring-inset ring-gray-900/5 transition-colors duration-200 ease-in-out has-[:checked]:bg-bitcoin has-[:focus-visible]:outline has-[:focus-visible]:outline-2">
        <span class="size-4 rounded-full bg-white shadow-sm ring-1 ring-gray-900/5 transition-transform duration-200 ease-in-out group-has-[:checked]:translate-x-3.5"></span>

        <input id="{{ .ItemID }}" type="checkbox" name="{{ .ItemID }}" value="{{ .ItemID }}"
        {{ if .Checked }}
            checked
        {{ end }}
        class="absolute opacity-0 inset-0 appearance-none focus:outline-none" />
    </div>
  </div>
  <label for="{{ .ItemID }}" class="text-sm/6 text-gray-300">
  {{ .ItemDesc }}
  </label>
</div>
{{ end }}
